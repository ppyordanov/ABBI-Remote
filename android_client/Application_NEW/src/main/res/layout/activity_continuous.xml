<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/secondView"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <proj.abbi.CircularSeekBar
                android:id="@+id/seekBarContFreq"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/pitchDesc"
                android:max="35"
                android:progress="1" />


            <TextView
                android:id="@+id/textViewInd1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/seekBarContFreq"
                android:layout_alignLeft="@id/seekBarContFreq"
                android:layout_alignRight="@id/seekBarContFreq"
                android:layout_alignTop="@id/seekBarContFreq"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/pitch"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/secondView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/secondView"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <proj.abbi.CircularSeekBar
                android:id="@+id/seekBarContVol"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/volumeDesc"
                android:max="35"
                android:progress="1" />


            <TextView
                android:id="@+id/textViewInd2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/seekBarContVol"
                android:layout_alignLeft="@id/seekBarContVol"
                android:layout_alignRight="@id/seekBarContVol"
                android:layout_alignTop="@id/seekBarContVol"
                android:background="#00000000"
                android:gravity="center"
                android:text="@string/volume"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonContSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</RelativeLayout>

